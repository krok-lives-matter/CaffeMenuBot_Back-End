@inject NavigationManager NavigationManager

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <NavLink Match="NavLinkMatch.All" class="nav-link" href="/dashboard/categories" id="v-pills-home-tab"
                         aria-selected="true" aria-controls="v-pills-home" data-toggle="pill" role="tab">
                    Categories
                </NavLink>
                <NavLink Match="NavLinkMatch.All" class="nav-link" href="/dashboard/dishes" id="v-pills-dishes-tab"
                         aria-selected="false" aria-controls="v-pills-dishes" data-toggle="pill" role="tab">
                    Dishes
                </NavLink>
                <NavLink Match="NavLinkMatch.All" class="nav-link" href="/dashboard/messages" id="v-pills-messages-tab"
                         aria-selected="false" aria-controls="v-pills-messages" data-toggle="pill" role="tab">
                    Messages
                </NavLink>
                <NavLink Match="NavLinkMatch.All" class="nav-link" href="/dashboard/settings" id="v-pills-settings-tab"
                         aria-selected="false" aria-controls="v-pills-settings" data-toggle="pill" role="tab">
                    Settings
                </NavLink>
            </div>
        </div>
        <div class="col-10">
            <div class="tab-content" id="v-pills-tabContent">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
}